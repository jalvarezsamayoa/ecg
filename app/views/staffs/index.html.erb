       <p><% if user_signed_in? %> <%= link_to 'Edit', edit_staff_path(staff) %> | <%= link_to 'Destroy', staff, :confirm => 'Are you sure?', :method => :delete %> <% end %>
		</p>
      </div>
		<p class="staff_pad">&nbsp;</p>
    <% end %>
    <p>&nbsp;</p>
    <p><% if user_signed_in? %><%= link_to 'New staff', new_staff_path %><% end %></p>
</div>
    
