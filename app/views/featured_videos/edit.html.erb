<%= render :partial => 'shared/interior_hero' %>
<div id="interior_wrapper">
  <div id="interior_header_absolute">
    <h6 id="int_header">Edit Featured Video</h6>
  </div>

  <div id="interior_sub_head"><h5 id="sub_green_head"></h5></div>
  <div id="interior_pad">

    <h1>Edit Featured Video</h1>

    <%= form_for resource, :html => {:multipart => true} do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :title, 'Video Title' %><br />
        <%= f.text_field :title, :size => 50 %>
      </p>

      <p>
        <%= f.label :image, 'Preview Image' %><br />
        <%= image_tag resource.image.url(:catalog) %><br />
        <%= f.file_field :image %><br />
      </p>
      
      <p>
        <%= f.label :embeded_code, 'YouTube share long url (http://www.youtube.com/watch?v=kEdhuX146is)' %><br />
        <%= f.text_area :embeded_code %>
      </p>


      <p>
        <%= f.submit 'Update' %>
      </p>
    <% end %>
    <p><%= link_to 'Back', featured_videos_path %></p>
  </div>
</div>
<%= render :partial => 'shared/interior_footer' %>
